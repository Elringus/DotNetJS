<Project TreatAsLocalProperty="TaskFolder;TaskAssembly">

    <PropertyGroup>
        <TaskFolder>netstandard2.0</TaskFolder>
        <TaskAssembly>$(MSBuildThisFileDirectory)..\tasks\$(TaskFolder)\DotNetJS.Packer.dll</TaskAssembly>
    </PropertyGroup>

    <UsingTask TaskName="MSBuildTasks.PackAssemblies" AssemblyFile="$(TaskAssembly)"/>

</Project>
